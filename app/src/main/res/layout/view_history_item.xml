<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/task_item_bottom_margin"
    android:layout_marginLeft="@dimen/task_item_side_margin"
    android:layout_marginRight="@dimen/task_item_side_margin"
    android:background="@drawable/card_bg"
    >

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:clickable="true"
        android:background="@drawable/button_background"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="8dp"
            />
        
        <com.hansollee.mydays.widgets.HistoryGraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:graphHeight="24dp"
            app:xAxisTextSize="12sp"
            />

    </LinearLayout>

</FrameLayout>
