<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/text_heading1</item>
        <item name="titleTextColor">@color/text_heading1</item>
    </style>

    <style name="MyTextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
